pipeline {
	agent {label'master'}


	environment{
		TOMCAT_USER="ubuntu"
		TOMCAT_HOST="13.201.187.70"
		TOMCAT_PATH="/home/ubuntu/tomcat/webapps"
	
		  
                
	}
	stages {
		stage('Checkout') {
			steps {
				echo 'Checkout completed'
				git branch: 'main', url: 'https://github.com/guruvenkatakrishna/java-example.git'
			}
		}
		stage('test') {
			steps {
				echo 'This is test on code.Assume it is tested'
			}
		}
		stage('Build') {
			steps {
				sh 'mvn clean install'
			}
		}
		stage('Deploy') {
			
	
			steps {
				echo 'Deploying into environment'
				

				sh 'sudo rsync -avz -e ssh /var/lib/jenkins/workspace/tomcat/target/*.war ubuntu@13.201.187.70:/home/ubuntu/tomcat/webapps'
			}
			
		}
	}
}
